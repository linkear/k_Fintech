<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nameProduct" class="form-control" placeholder="Nombre de Producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input name="tipo" rows="2" class="form-control" placeholder="Categoria"></input>
                        </div>
                        <div class="form-group">
                            <input type="text" name="unidadMedida" rows="2" class="form-control" placeholder="Unidad de Medida ">
                        </div>
                        <div class="form-group">
                            <input type="number" name="initCantd" class="form-control" placeholder="Cantidad Inicial">
                        </div>
                        <div class="form-group">
                            <input type="number" min="0"   name="updateCantd" class="form-control" placeholder="Cantidad Actual">
                        </div>
                        <div class="form-group">
                            <input type="number" min="0" step="0.01" name="cost" class="form-control" placeholder="Precio">
                        </div>
                        <div class="form-group">
                            <input type="number" min="0" step="0.01" name="iva" class="form-control" placeholder="Iva(opcional)">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>